generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Paper {
  id           String   @id @default(cuid())
  PMID         Int      @unique
  title        String
  slug         String   @unique
  abstract     String
  authors      String[]
  journal      String
  pub_date     DateTime
  keywords     String[]
  url          String
  affiliations String[]
}
